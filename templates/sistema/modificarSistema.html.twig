{% extends 'base.html.twig' %}

{% block title %}Intranet - Editar sistema{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block icon %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{#<a class="btn btn-info" style="margin:10px;" href="{{ path("app_logout") }}">Cerrar sesión</a>#}

{# Recorrido de los sistemas del usuario, recibido por parametro #}

    <div>
        <h3 style="text-align:center;">Sistemas >> Editar sistema</h3>
    </div>
    <div class="container formularioSistema">
        <div class="row">
        <div class="col-6">
            <img class="card-img-top rounded imagenSistema" src="{{asset(('uploads/'~ imagen))}}" alt="Imagen del sistema">
        </div>
        <div class="col-6">
    {{ form_start(formulario, {'enctype':'multipart/form-data'})}}
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                Nombre:
            </div>
            <div class="col-sm-10">
                {{ form_widget(formulario.nombre, {attr: {class: 'form-control'} })}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                Imágen del sistema:
            </div>
            <div class="col-sm-10">
                {{ form_widget(formulario.logo)}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                URL:
            </div>
            <div class="col-sm-10">
                {{ form_widget(formulario.url, {attr: {class: 'form-control'} })}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                Descripción:
            </div>
            <div class="col-sm-10">
                {{ form_widget(formulario.descripcion, {attr: {class: 'form-control'} })}}
            </div>
        </div>
        {{ form_widget(formulario.Listo, {attr: {class: 'container-fluid btn btn-primary colorBoton'} })}}
    {{ form_end(formulario) }}  
    </div>
    </div>
    
    </div>
    
    {% block notificaciones %}
        {{ parent() }}
    {% endblock notificaciones %}

{% endblock %}
